{
  "$id": "mam-payload.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "description": "A representation of an event",
  "properties": {
    "Description": {
      "$ref": "description.schema.json"
    },
    "DeviceClass": {
      "type": "string",
      "description": ""
    },
    "DeviceManual": {
      "type": "string",
      "description": ""
    },
    "DeviceRevision": {
      "type": "string",
      "description": ""
    },
    "HardwareRevision": {
      "type": "string",
      "description": ""
    },
    "Manufacturer": {
      "type": "string",
      "description": "Manufacturer Name"
    },
    "ManufacturerUri": {
      "type": "string",
      "format": "uri",
      "description": "Manufacturer URI"
    },
    "Model": {
      "type": "string",
      "description": ""
    },
    "ProductCode": {
      "type": "string",
      "description": ""
    },
    "ProductInstanceUri": {
      "$ref": "oi4-identifier.schema.json"
    },
    "RevisionCounter": {
      "type": "integer",
      "description": "",
      "minimum": 0
    },
    "SerialNumber": {
      "type": "string",
      "description": ""
    },
    "SoftwareRevision": {
      "type": "string",
      "description": ""
    }
  },
  "required": [
    "Description",
    "DeviceClass",
    "DeviceManual",
    "DeviceRevision",
    "HardwareRevision",
    "Manufacturer",
    "ManufacturerUri",
    "Model",
    "ProductCode",
    "ProductInstanceUri",
    "RevisionCounter",
    "SerialNumber",
    "SoftwareRevision"
  ],
  "type": "object"
}