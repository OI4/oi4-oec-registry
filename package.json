{
  "name": "@oi4/oi4registry",
  "version": "1.1.0-preview.2",
  "description": "A registry that keeps track of all running Open Industry 4.0 Alliance application",
  "author": "Open Industry 4.0 Alliance - Community",
  "license": "MIT",
  "private": true,
  "keywords": [],
  "repository": "git@github.com:OI4/oi4-registry.git",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "http-server": "^14.1.0"
  },
  "devDependencies": {
    "dotenv": "^16.0.0",
    "lerna": "^4.0.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "build": "lerna run build",
    "install": "lerna run install",
    "test": "jest",
    "testLocalUI": "echo \"Check your browser for port 5000\" && npx serve packages/oi4-local-ui/build -s",
    "buildLocalUI": "cd ./packages/oi4-local-ui && npm run build",
    "docker:prepare": "docker buildx create --name oi4-builder --driver docker-container --use --platform linux/amd64,linux/arm64,linux/arm/v7,linux/arm/v6",
    "docker:build": "docker buildx build --push --platform linux/amd64,linux/arm64,linux/arm/v7,linux/arm/v6 -t ghcr.io/oi4/oi4-oec-registry:${npm_package_version} --build-arg PACKAGES_AUTH_TOKEN=${PACKAGES_AUTH_TOKEN} .",
    "docker:build:local": "docker build -t oi4/oi4-oec-registry:${npm_package_version} -t oi4/oi4-oec-registry:latest --build-arg PACKAGES_AUTH_TOKEN=${PACKAGES_AUTH_TOKEN} .",
    "docker:build:snapshot": "docker build -t oi4/oi4-oec-registry:${npm_package_version} -t oi4/oi4-oec-registry:latest --build-arg PACKAGES_AUTH_TOKEN=${PACKAGES_AUTH_TOKEN} --build-arg BUILD_ENV=snapshot .",

    "serveLocalUI": "cd ./packages/oi4-local-ui && serve build/",
    "buildAll": "cd ./packages/oi4-local-ui && npm run build && cd ../packages/oi4-registry-service && npm run tsc && cd ..",
    "installAll": "cd ./packages/oi4-local-ui && npm install && cd ../oi4-registry-service && npm install && cd .."
  },
  "engines": {
    "node": ">=16.0.0 <18.0.0",
    "yarn": ">=1.22.0 <2"
  }
}
